            <TextBlock Text="Arthas的WPF开源控件库，MIT许可"/>
            <TextBlock Text="WebSocket-Sharp，MIT许可"/>
            <TextBlock Text="JSON.NET，MIT许可"/>
            <TextBlock Text="KnowFolders，MIT许可"/>
