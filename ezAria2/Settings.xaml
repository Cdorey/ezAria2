<Metro:MetroWindow  x:Class="ezAria2.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ezAria2"
        xmlns:Metro="clr-namespace:Arthas.Controls.Metro;assembly=Arthas"
        mc:Ignorable="d"
        Title="设置" Height="450" Width="600" MinWidth="600" MinHeight="450" BorderBrush="#FF146099" Icon="Resources/setting2.png">
    <Window.Resources>
        <Style TargetType="Metro:MetroTextBlock">
            <Setter Property="Margin"  Value="0,10,0,0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="Metro:MetroTextBox">
            <Setter Property="Margin"  Value="0,10,0,0"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <local:StringToBoolConverter x:Key="S2B"/>
        <local:BoolToStringConverter x:Key="B2S"/>
    </Window.Resources>
    <Grid Background="#FFE5E5E5">
        <Metro:MetroButton x:Name="Cancel" Content="取消" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Click="Cancel_Click"/>
        <Metro:MetroButton x:Name="Enter" Content="确定" HorizontalAlignment="Right" Margin="0,0,117,10" VerticalAlignment="Bottom" Click="Enter_Click"/>
        <Metro:MetroTextBox Margin="10,0,222,10" TextWrapping="Wrap" Text="提示：在当前机制下，所有设置都将在下次启动时生效，即时更新设置项的代码有待补充。" Background="{x:Null}" BorderBrush="{x:Null}" Height="40" VerticalAlignment="Bottom"/>
        <Metro:MetroScrollViewer Margin="0,5,0,50">
            <StackPanel>
                <Metro:MetroGroupBox Header="文件策略">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*" />
                            <ColumnDefinition Width="7*"/>
                        </Grid.ColumnDefinitions>
                        <Metro:MetroTextBlock Grid.Row="0">
                            <Run Text="文件的保存路径" Foreground="Gray" />
                        </Metro:MetroTextBlock>
                        <Metro:MetroTextBlock Grid.Row="1">
                            <Run Text="文件缓冲区尺寸" Foreground="Gray"/>
                        </Metro:MetroTextBlock>
                        <Metro:MetroTextBlock Grid.Row="2">
                            <Run Text="磁盘预分配规则" Foreground="Gray"/>
                        </Metro:MetroTextBlock>
                        <Metro:MetroTextBlock Grid.Row="3">
                            <Run Text="中断后继续下载" Foreground="Gray"/>
                        </Metro:MetroTextBlock>

                        <Metro:MetroTextBox x:Name="dir" Text="{Binding Dir}" Grid.Column="1"/>
                        <Metro:MetroTextBox x:Name="disk_cache" Text="{Binding Disk_cache}" Grid.Row="1" Grid.Column="1"/>
                        <StackPanel x:Name="file_allocation" Orientation="Horizontal" Height="24" VerticalAlignment="Center" Grid.Row="2" Grid.Column="1" Margin="0,10,0,0" >
                            <RadioButton x:Name="Disk_None" Content="None" Margin="5" Foreground="Gray"/>
                            <RadioButton x:Name="Disk_Falloc" Content="Falloc" Margin="5" Foreground="Gray"/>
                            <RadioButton x:Name="Disk_Trunc" Content="Trunc" Margin="5" Foreground="Gray"/>
                            <RadioButton x:Name="Disk_Prealloc" Content="Prealloc" Margin="5" Foreground="Gray"/>
                        </StackPanel>
                        <Metro:MetroSwitch x:Name="continue" Content="{Binding ElementName=continue,Path=IsChecked,Converter={StaticResource B2S}}" IsChecked="{Binding Continue,Converter={StaticResource S2B}}" VerticalAlignment="Center" CornerRadius="2" BorderCornerRadius="3" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Left" Margin="0,10,0,0" />
                    </Grid>
                </Metro:MetroGroupBox >
                <Metro:MetroGroupBox Header="下载选项">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*" />
                            <ColumnDefinition Width="7*"/>
                        </Grid.ColumnDefinitions>
                        <Metro:MetroTextBlock Grid.Row="0">
                            <Run Text="最大同时下载任务数" Foreground="Gray" />
                        </Metro:MetroTextBlock>
                        <Metro:MetroTextBlock Grid.Row="1">
                            <Run Text="同一服务器连接数" Foreground="Gray" />
                        </Metro:MetroTextBlock>
                        <Metro:MetroTextBlock Grid.Row="2">
                            <Run Text="最小文件分片大小" Foreground="Gray" />
                        </Metro:MetroTextBlock>
                        <Metro:MetroTextBlock Grid.Row="3">
                            <Run Text="单个任务最大线程数" Foreground="Gray" />
                        </Metro:MetroTextBlock>
                        <Metro:MetroTextBlock Grid.Row="4">
                            <Run Text="整体下载速度限制" Foreground="Gray" />
                        </Metro:MetroTextBlock>
                        <Metro:MetroTextBlock Grid.Row="5">
                            <Run Text="单个任务下载速度限制" Foreground="Gray" />
                        </Metro:MetroTextBlock>
                        <Metro:MetroTextBlock Grid.Row="6">
                            <Run Text="整体上传速度限制" Foreground="Gray" />
                        </Metro:MetroTextBlock>
                        <Metro:MetroTextBlock Grid.Row="7">
                            <Run Text="单个任务上传速度限制" Foreground="Gray" />
                        </Metro:MetroTextBlock>
                        <Metro:MetroTextBlock Grid.Row="8">
                            <Run Text="IPv6" Foreground="Gray" />
                        </Metro:MetroTextBlock>
                        <Metro:MetroTextBlock Grid.Row="9">
                            <Run Text="连接超时时间" Foreground="Gray" />
                        </Metro:MetroTextBlock>
                        <Metro:MetroTextBlock Grid.Row="10">
                            <Run Text="最大重试次数" Foreground="Gray" />
                        </Metro:MetroTextBlock>
                        <Metro:MetroTextBlock Grid.Row="11">
                            <Run Text="设置重试等待的秒数" Foreground="Gray" />
                        </Metro:MetroTextBlock>

                        <Metro:MetroTextBox x:Name="max_concurrent_downloads" Text="{Binding Max_concurrent_downloads}" Width="80" HorizontalAlignment="Left" Grid.Row="0" Grid.Column="1"/>
                        <Metro:MetroTextBox x:Name="max_connection_per_server" Text="{Binding Max_connection_per_server}" Width="80" HorizontalAlignment="Left" Grid.Row="1" Grid.Column="1"/>
                        <Metro:MetroTextBox x:Name="min_split_size" Width="80" Text="{Binding Min_split_size}" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="1"/>
                        <Metro:MetroTextBox x:Name="split" Text="{Binding Split}" Width="80" HorizontalAlignment="Left" Grid.Row="3" Grid.Column="1"/>
                        <Metro:MetroTextBox x:Name="max_overall_download_limit" Text="{Binding Max_overall_download_limit}" Width="80" HorizontalAlignment="Left" Grid.Row="4" Grid.Column="1"/>
                        <Metro:MetroTextBox x:Name="max_download_limit" Text="{Binding Max_download_limit}" Width="80" HorizontalAlignment="Left" Grid.Row="5" Grid.Column="1"/>
                        <Metro:MetroTextBox x:Name="max_overall_upload_limit" Text="{Binding Max_overall_upload_limit}" Width="80" HorizontalAlignment="Left" Grid.Row="6" Grid.Column="1"/>
                        <Metro:MetroTextBox x:Name="max_upload_limit" Text="{Binding Max_upload_limit}" Width="80" HorizontalAlignment="Left" Grid.Row="7" Grid.Column="1"/>
                        <Metro:MetroTextBox x:Name="disable_ipv6" Text="{Binding Disable_ipv6}" Width="80" HorizontalAlignment="Left" Grid.Row="8" Grid.Column="1"/>
                        <Metro:MetroTextBox x:Name="timeout" Text="{Binding Timeout}" Width="80" HorizontalAlignment="Left" Grid.Row="9" Grid.Column="1"/>
                        <Metro:MetroTextBox x:Name="max_tries" Text="{Binding Max_tries}" Width="80" HorizontalAlignment="Left" Grid.Row="10" Grid.Column="1"/>
                        <Metro:MetroTextBox x:Name="retry_wait" Text="{Binding Retry_wait}" Width="80" HorizontalAlignment="Left" Grid.Row="11" Grid.Column="1"/>
                    </Grid>
                </Metro:MetroGroupBox>
                <Metro:MetroGroupBox Header="接口信息">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*" />
                            <ColumnDefinition Width="7*"/>
                        </Grid.ColumnDefinitions>
                        <Metro:MetroTextBlock >
                            <Run Text="当前的RPC授权令牌" Foreground="Gray" />
                        </Metro:MetroTextBlock>
                        <Metro:MetroTextBlock Grid.Column="1">
                            <Run x:Name="rpc_secret" Text="{Binding Rpc_secret}" Foreground="Gray" />
                        </Metro:MetroTextBlock>

                    </Grid>
                </Metro:MetroGroupBox>
                <Metro:MetroGroupBox Header="比特设置">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*" />
                            <ColumnDefinition Width="7*"/>
                        </Grid.ColumnDefinitions>

                        <Metro:MetroTextBlock Grid.Row="0">
                            <Run Text="下载种子时自动开始BT任务" Foreground="Gray" />
                        </Metro:MetroTextBlock>
                        <Metro:MetroTextBlock Grid.Row="1">
                            <Run Text="BT监听端口" Foreground="Gray" />
                        </Metro:MetroTextBlock>
                        <Metro:MetroTextBlock Grid.Row="2">
                            <Run Text="单个种子最大连接数" Foreground="Gray" />
                        </Metro:MetroTextBlock>
                        <Metro:MetroTextBlock Grid.Row="3">
                            <Run Text="打开DHT功能" Foreground="Gray" />
                        </Metro:MetroTextBlock>
                        <Metro:MetroTextBlock Grid.Row="4">
                            <Run Text="打开IPv6 DHT功能" Foreground="Gray" />
                        </Metro:MetroTextBlock>
                        <Metro:MetroTextBlock Grid.Row="5">
                            <Run Text="DHT网络监听端口" Foreground="Gray" />
                        </Metro:MetroTextBlock>
                        <Metro:MetroTextBlock Grid.Row="6">
                            <Run Text="本地节点查找" Foreground="Gray" />
                        </Metro:MetroTextBlock>
                        <Metro:MetroTextBlock Grid.Row="7">
                            <Run Text="种子交换" Foreground="Gray" />
                        </Metro:MetroTextBlock>
                        <Metro:MetroTextBlock Grid.Row="8">
                            <Run Text="每个种子限速" Foreground="Gray" />
                        </Metro:MetroTextBlock>
                        <Metro:MetroTextBlock Grid.Row="9">
                            <Run Text="设置 peer id 前缀" Foreground="Gray" />
                        </Metro:MetroTextBlock>
                        <Metro:MetroTextBlock Grid.Row="10">
                            <Run Text="客户端伪装" Foreground="Gray" />
                        </Metro:MetroTextBlock>
                        <Metro:MetroTextBlock Grid.Row="11">
                            <Run Text="自动做种直到分享率达到" Foreground="Gray" />
                        </Metro:MetroTextBlock>
                        <Metro:MetroTextBlock Grid.Row="12">
                            <Run Text="强制保存会话, 即使任务已经完成" Foreground="Gray" />
                        </Metro:MetroTextBlock>
                        <Metro:MetroTextBlock Grid.Row="13">
                            <Run Text="BT校验" Foreground="Gray" />
                        </Metro:MetroTextBlock>
                        <Metro:MetroTextBlock Grid.Row="14">
                            <Run Text="继续之前的BT任务时, 无需再次校验" Foreground="Gray" />
                        </Metro:MetroTextBlock>
                        <Metro:MetroTextBlock Grid.Row="15">
                            <Run Text="保存磁力链接元数据为种子文件" Foreground="Gray" />
                        </Metro:MetroTextBlock>

                        <Metro:MetroTextBox x:Name="follow_torrent" Text="{Binding Follow_torrent}" Width="80" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="0"/>
                        <Metro:MetroTextBox x:Name="listen_port" Text="{Binding Listen_port}" Width="80" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="1"/>
                        <Metro:MetroTextBox x:Name="bt_max_peers" Text="{Binding Bt_max_peers}" Width="80" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="2"/>
                        <Metro:MetroTextBox x:Name="enable_dht" Text="{Binding Enable_dht}" Width="80" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="3"/>
                        <Metro:MetroTextBox x:Name="enable_dht6" Text="{Binding Enable_dht6}" Width="80" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="4"/>
                        <Metro:MetroTextBox x:Name="dht_listen_port" Text="{Binding Dht_listen_port}" Width="80" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="5"/>
                        <Metro:MetroTextBox x:Name="bt_enable_lpd" Text="{Binding Bt_enable_lpd}" Width="80" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="6"/>
                        <Metro:MetroTextBox x:Name="enable_peer_exchange" Text="{Binding Enable_peer_exchange}" Width="80" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="7"/>
                        <Metro:MetroTextBox x:Name="bt_request_peer_speed_limit" Text="{Binding Bt_request_peer_speed_limit}" Width="80" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="8"/>
                        <Metro:MetroTextBox x:Name="peer_id_prefix" Width="80" Text="{Binding Peer_id_prefix}" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="9"/>
                        <Metro:MetroTextBox x:Name="user_agent" Width="80" Text="{Binding User_agent}" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="10"/>
                        <Metro:MetroTextBox x:Name="seed_ratio" Width="80" Text="{Binding Seed_ratio}" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="11"/>
                        <Metro:MetroTextBox x:Name="force_save" Width="80" Text="{Binding Force_save}" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="12"/>
                        <Metro:MetroTextBox x:Name="bt_hash_check_seed" Text="{Binding Bt_hash_check_seed}" Width="80" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="13"/>
                        <Metro:MetroTextBox x:Name="bt_seed_unverified" Text="{Binding Bt_seed_unverified}" Width="80" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="14"/>
                        <Metro:MetroTextBox x:Name="bt_save_metadata" Text="{Binding Bt_save_metadata}" Width="80" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="15"/>
                    </Grid>
                </Metro:MetroGroupBox>
            </StackPanel>
