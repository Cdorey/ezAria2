<UserControl x:Class="Arthas.Controls.Metro.MetroWebBrowser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Arthas.Controls.Metro"
             xmlns:Forms="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
             mc:Ignorable="d">
    <Grid Background="#FFABABAB">
        <WindowsFormsHost x:Name="webp" Visibility="Hidden">
            <Forms:WebBrowser x:Name="web" AllowWebBrowserDrop="False" WebBrowserShortcutsEnabled="False" IsWebBrowserContextMenuEnabled="False" ScriptErrorsSuppressed="True"/>
        </WindowsFormsHost>
    </Grid>
</UserControl>